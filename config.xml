<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets" xmlns:gap   = "http://apix.com/ns/1.0" id = "com.Wcurrent.example" versionCode = "10" version = "1.0.0" >


  <name>Wcurrent</name>

  <description>
      a geolocation app using current weather
  </description>

 
   <preference name="FadeSplashScreenDuration" value="750"/>
  <author href="https://build.phonegap.com" email="purdaseea8@gmail.com">
      Keshav purdaseea
  </author>
 
  <plugin name="cordova-plugin-whitelist" spec="~1.3.2" />
  <plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
  <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
   <preference name="fullscreen" value="true" />  
   <preference name="SplashScreen" value="screen" /> 
   <access origin="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
   <access origin="https://fonts.googleapis.com/css?family=Lato" />
   <access origin="content:///*" />
   <allow-navigation href="*" />
   <splash src="splash.jpg"/>
    
<icon src="sd.png" platform="android" qualifier="ldpi" />
<icon src="sd.png" platform="android" qualifier="mdpi" />
<icon src="sd.png" platform="android" qualifier="hdpi" />
<icon src="sd.png" platform="android" qualifier="xhdpi" />
<icon src="sd.png" platform="android" qualifier="xxhdpi" />
<icon src="sd.png" platform="android" qualifier="fr-xxhdpi" />



</widget>